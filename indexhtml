    <script>
        // IP kopyalama iÅŸlevi
        document.getElementById('serverIp').addEventListener('click', function() {
            const ip = this.textContent;
            navigator.clipboard.writeText(ip)
                .then(() => {
                    const originalText = this.textContent;
                    this.textContent = 'IP KopyalandÄ±!';
                    setTimeout(() => {
                        this.textContent = originalText;
                    }, 2000);
                });
        });

        // Sunucu durum kontrolÃ¼
        async function checkServerStatus() {
            try {
                const response = await fetch('https://api.mcsrvstat.us/2/BatCraft.aternos.me');
                const data = await response.json();
                const statusElement = document.createElement('div');
                statusElement.style.marginTop = '1rem';
                statusElement.style.padding = '0.5rem';
                statusElement.style.borderRadius = '5px';
                
                if(data.online) {
                    statusElement.style.backgroundColor = '#2e7d32';
                    statusElement.innerHTML = `ðŸŸ¢ Ã‡evrimiÃ§i - ${data.players.online}/${data.players.max} oyuncu`;
                } else {
                    statusElement.style.backgroundColor = '#c62828';
                    statusElement.textContent = 'ðŸ”´ Ã‡evrimdÄ±ÅŸÄ±';
                }
                
                document.querySelector('.server-info').appendChild(statusElement);
            } catch (error) {
                console.error('Sunucu durumu kontrol edilemedi:', error);
            }
        }
        
        // YÄ±l otomatik gÃ¼ncelleme
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        
        // Sayfa yÃ¼klendiÄŸinde Ã§alÄ±ÅŸacaklar
        window.addEventListener('load', function() {
            checkServerStatus();
        });
    </script>
